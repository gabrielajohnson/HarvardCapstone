{
  "version": 2,
  "env": {
  },
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/src/main.js",
      "use": "@vercel/static",
      "config": { "includeFiles": ["frontend/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/",
      "dest": "frontend/dist/index.html"
    },
  ]
}

